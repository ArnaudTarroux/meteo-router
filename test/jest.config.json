{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".test.ts$",
  "transform": {
    "^.+\\.(t|j)s$": [
      "ts-jest",
      {
        "isolatedModules": true,
        "tsconfig": "./tsconfig.json"
      }
    ]
  },
  "modulePaths": ["<rootDir>/src", "<rootDir>/node_modules"]
}
